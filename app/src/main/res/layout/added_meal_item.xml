<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginLeft="8sp"
        android:layout_weight="9.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/added_meal_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textColor="@color/raisinBlackDark"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/added_meal_item_ib_remove"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:background="@drawable/remove_item_ib_bg"
        android:src="@drawable/ic_remove_button" />

</LinearLayout>