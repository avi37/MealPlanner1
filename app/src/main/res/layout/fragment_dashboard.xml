<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    android:orientation="vertical"
    tools:context=".DashboardFragment">

    <TextView
        android:id="@+id/mainDash_tv_notificationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/notificationRed"
        android:elevation="5sp"
        android:gravity="center"
        android:padding="3sp"
        android:text="Notifications"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/dash_card_add_cook"
                    android:layout_width="110sp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/redOpacity"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/circlebackgroundlightpink"
                            android:padding="10sp"
                            android:src="@drawable/ic_add_circle_outline_white_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:text="Add Cook"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10sp"
                            android:text="Click to add cook details"
                            android:textColor="@android:color/white" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/dash_card_create_today_menu"
                    android:layout_width="110sp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/redOpacity"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/circlebackgroundpink"
                            android:padding="10sp"
                            android:src="@drawable/ic_restaurant_menu_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Create \nYour Meal"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="1sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Click Here to create meals"
                            android:textColor="@android:color/white" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/dash_card_todays_menu"
                    android:layout_width="110sp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/redOpacity"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/circlebackgroundpurple"
                            android:padding="10sp"
                            android:src="@drawable/ic_today_menu_white_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:text="Today's Menu"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5sp"
                            android:text="Check your today's menu"
                            android:textColor="@android:color/white" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/dash_card_create_weekly_menu"
                    android:layout_width="110sp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/redOpacity"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:background="@drawable/circlebackgroundgreen"
                            android:padding="8sp"
                            android:src="@drawable/ic_dash_create_week_menu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Create Weekly \n Menu"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Create your menu in advance"
                            android:textColor="@android:color/white" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/dash_card_check_weekly_menu"
                    android:layout_width="110sp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/redOpacity"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/circlebackgrounddarkblue"
                            android:padding="10sp"
                            android:src="@drawable/ic_dash_check_week_menu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Weekly Menu"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5sp"
                            android:text="Check your weekly menu"
                            android:textColor="@android:color/white" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/dash_card_notify_cook"
                    android:layout_width="110sp"
                    android:layout_height="150sp"
                    android:layout_margin="10sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/redOpacity"
                    app:cardCornerRadius="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/circlebackgroundorange"
                            android:padding="10sp"
                            android:src="@drawable/ic_notifications_active_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:text="Notify Cook"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10sp"
                            android:text="Notify to cook about menu"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>