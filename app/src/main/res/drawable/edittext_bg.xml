<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#00000000" />
            <stroke
                android:width="2sp"
                android:color="#aae4a3" />
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="10dp"
                android:bottom="10dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" />
            <stroke
                android:width="1sp"
                android:color="#777" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>